
<%= form_tag search_articles_path, :method => :get  , :class=>'form-inline' do  %>
  <div class="form-group">
    <%= text_field_tag :keywords, params[:keywords], :class => "form-control", :placeholder=>"Keywords"  %>
  </div>
  <div class="form-group">
    <%= select_tag "group_id", options_from_collection_for_select(groups, :id, :name,:selected=> params[:group_id]), include_blank: true,  class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= submit_tag "Search", :name => nil ,:class => 'btn btn-default' %>
  <%= link_to 'Back to List', articles_path ,:class => 'btn btn-default' %>
  </div>
<% end %>
